<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="395dp"
        android:layout_height="715dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="201dp"
            android:layout_height="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="209dp"
                android:layout_height="30dp"
                android:text="FadeImage"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="FadeImage"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/bart"
                android:layout_width="181dp"
                android:layout_height="200dp"
                android:onClick="fade"
                app:srcCompat="@drawable/bart" />

            <ImageView
                android:id="@+id/homer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0"
                android:onClick="fade"
                app:srcCompat="@drawable/homer" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="209dp"
                android:layout_height="37dp"
                android:text="Bart is coming !" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Rotation and scale up"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/enterBartOnLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bart" />

            <ImageView
                android:id="@+id/rotateBart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="rotateAndScaleUpBart"
                app:srcCompat="@drawable/bart" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>